{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es5", //设置ts编译的目标版本：es3(默认),es5,es6,es7,es2017,es2018,es2019,es2020,esnext
        "module": "umd", //指定要使用的模块化规范: none,commonjs,amd,system,umd,es6,es2015,es2020,esnext
        // "lib": ["es5", "es6","es2016"], // 指定代码运行时所包含的库（宿主环境,运行在浏览器的js程序不需要设置此项）：es5,...,esnext,dom,webworker,scripthos
        // "lib": ["es5","es2015", "es2016"],
        "outDir": "./lib", //编译后文件输出目录
        "declaration": true // 是否生成d.ts文件
        // "moduleResolution": "node",
        // "esModuleInterop": true,
        // "skipLibCheck": true,
        // "allowJs": true //allowJs: 是否对js文件进行编译，默认为false
        // "removeComments": true, // 是否移除注释, 默认false
        // "module": "commonjs",
        // "sourceMap": true
    },
    "files": ["src/index.ts"] //指定被编译文件的列表
}
